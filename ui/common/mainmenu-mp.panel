	action { close mpmenu; play MP_SND_SELECT; setcvar ui_menutab "0"; open mainmenu; }
	mouseEnter { setcvar ui_tip "Go back to the main menu" fadein tooltip; setbackground MP_LONGBUTTONBGA } mouseExit { fadeout tooltip; setbackground MP_LONGBUTTONBG} 
